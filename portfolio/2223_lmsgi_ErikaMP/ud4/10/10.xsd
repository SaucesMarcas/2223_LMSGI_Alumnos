                                </xs:complexType>
                            </xs:element>
                            <xs:element name="sinGluten">
                                <xs:complexType>
                                    <xs:attribute name="opcion" type="xs:boolean"/>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="cantidad" minOccurs="0">
                                
                            </xs:element>
                        </xs:all>
                    </xs:complexType>
                </xs:element>
                <xs:element name="bebida" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="formaPago">
                    <xs:complexType>
                        <xs:choice>
                            <xs:element name="bizzum" type="tipoPositivo"/>
                            <xs:element name="efectivo" type="tipoPositivo"/>
                            <xs:element name="tarjeta" type="tipoPositivo"/>
                            <xs:element name="paypal" type="tipoPositivo"/>
                        </xs:choice>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>